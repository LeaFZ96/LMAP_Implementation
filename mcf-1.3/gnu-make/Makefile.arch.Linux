CC  = gcc
GCC = gcc

CXX = g++
GXX = g++

LD  = g++


CFLAGS  = -Wall -Winline

ifeq ($(WARN),error)
	 CFLAGS += -Werror
endif

CFLAGS += -g

ifeq ($(LEVEL),opt)
	 CFLAGS += -O6
endif

CFLAGS += -funroll-all-loops -funroll-loops
#CFLAGS += --inline-limit=10000
CFLAGS += -mcpu=x86-64 -march=x86-64

CXXFLAGS = $(CFLAGS)
CC  = gcc
GCC = gcc

CXX = g++
GXX = g++

LD  = g++


CFLAGS  = -Wall -Winline

ifeq ($(WARN),error)
	 CFLAGS += -Werror
endif

CFLAGS += -g

ifeq ($(LEVEL),opt)
	 CFLAGS += -O6
endif

CFLAGS += -ffloat-store -funroll-all-loops -funroll-loops
#CFLAGS += --inline-limit=10000
CFLAGS += -mcpu=pentiumpro -march=pentiumpro

CXXFLAGS = $(CFLAGS)